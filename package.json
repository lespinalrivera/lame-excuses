{
  "name": "lame-excuses",
  "version": "0.0.0-semantically-released",
  "description": "Generate Lame Excuses",
  "main": "src/index.js",
  "scripts": {
    "commit": "git-cz",
    "test": "mocha src/index.test.js -w",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "test:single": "istanbul cover -x *.test.js ./node_modules/mocha/bin/_mocha -- -R spec src/index.test.js",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lespinalrivera/lame-excuses.git"
  },
  "keywords": [
    "lame-excuses",
    "excuses",
    "sorry",
    "im-late",
    "excuse-generator"
  ],
  "author": "Luis Espinal <luis@typow.ca> (https://typow.ca/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lespinalrivera/lame-excuses/issues"
  },
  "homepage": "https://github.com/lespinalrivera/lame-excuses#readme",
  "dependencies": {
    "unique-random-array": "1.0.0"
  },
  "devDependencies": {
    "chai": "4.0.2",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.0.0",
    "ghooks": "2.0.0",
    "istanbul": "0.4.5",
    "mocha": "3.4.2",
    "semantic-release": "^6.3.6"
  },
  "czConfig": {
    "path": "node_modules/cz-conventional-changelog"
  },
  "Config": {
    "ghooks": {
      "pre-commit": "npm run test:single && npm run check-coverage"
    }
  }
}
